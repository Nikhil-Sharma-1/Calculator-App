<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorNavy"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorNavy"
        android:layout_weight="1"
        android:gravity="right|bottom"
        android:inputType="textPersonName"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="35pt"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/buAC"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="45pt"
                android:text="AC"
                android:onClick="acEvent"
                android:fontFamily="sans-serif"
                android:textSize="23dp"
                android:background="@color/colorNavy"
                android:textColor="@color/colorOrange"
                ></Button>
            <Button
                android:id="@+id/buPlusMinus"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="45pt"
                android:text="+/-"
                android:onClick="numberEvent"
                android:fontFamily="sans-serif"
                android:textSize="23dp"
                android:background="@color/colorNavy"
                android:textColor="@color/colorOrange"
                ></Button>
            <Button
                android:id="@+id/buPercent"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="45pt"
                android:text="%"
                android:onClick="percentEvent"
                android:fontFamily="sans-serif"
                android:textSize="23dp"
                android:background="@color/colorNavy"
                android:textColor="@color/colorOrange"
                ></Button>
            <Button
                android:id="@+id/buDivide"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="45pt"
                android:text="/"
                android:onClick="operatorEvent"
                android:fontFamily="sans-serif"
                android:textSize="23dp"
                android:background="@color/colorNavy"
                android:textColor="@color/colorOrange"
                ></Button>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bu7"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="45pt"
                android:text="7"
                android:onClick="numberEvent"
                android:fontFamily="sans-serif"
                android:textSize="30dp"
                android:background="@color/colorNavy"
                android:textColor="@android:color/white"
                ></Button>
            <Button
                android:id="@+id/bu8"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="45pt"
                android:text="8"
                android:onClick="numberEvent"
                android:fontFamily="sans-serif"
                android:textSize="30dp"
                android:background="@color/colorNavy"
                android:textColor="@android:color/white"
                ></Button>
            <Button
                android:id="@+id/bu9"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="45pt"
                android:text="9"
                android:onClick="numberEvent"
                android:fontFamily="sans-serif"
                android:textSize="30dp"
                android:background="@color/colorNavy"
                android:textColor="@android:color/white"
                ></Button>
            <Button
                android:id="@+id/buMultiply"
                android:layout_weight="0.5"
                android:layout_width="3pt"
                android:layout_height="40pt"
                android:text="*"
                android:onClick="operatorEvent"
                android:fontFamily="sans-serif"
                android:textSize="27dp"
                android:gravity="center"
                android:background="@drawable/round_button"
                android:textColor="@color/colorNavy"
                ></Button>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bu4"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="45pt"
                android:text="4"
                android:onClick="numberEvent"
                android:fontFamily="sans-serif"
                android:textSize="30dp"
                android:background="@color/colorNavy"
                android:textColor="@android:color/white"
                ></Button>
            <Button
                android:id="@+id/bu5"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="45pt"
                android:text="5"
                android:onClick="numberEvent"
                android:fontFamily="sans-serif"
                android:textSize="30dp"
                android:background="@color/colorNavy"
                android:textColor="@android:color/white"
                ></Button>
            <Button
                android:id="@+id/bu6"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="45pt"
                android:text="6"
                android:onClick="numberEvent"
                android:fontFamily="sans-serif"
                android:textSize="30dp"
                android:background="@color/colorNavy"
                android:textColor="@android:color/white"
                ></Button>
            <Button
                android:id="@+id/buMinus"
                android:layout_weight="0.5"
                android:layout_width="3pt"
                android:layout_height="40pt"
                android:text="-"
                android:onClick="operatorEvent"
                android:fontFamily="sans-serif"
                android:textSize="27dp"
                android:gravity="center"
                android:background="@drawable/round_button"
                android:textColor="@color/colorNavy"
                ></Button>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bu1"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="45pt"
                android:text="1"
                android:onClick="numberEvent"
                android:fontFamily="sans-serif"
                android:textSize="30dp"
                android:background="@color/colorNavy"
                android:textColor="@android:color/white"
                ></Button>
            <Button
                android:id="@+id/bu2"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="45pt"
                android:text="2"
                android:onClick="numberEvent"
                android:fontFamily="sans-serif"
                android:textSize="30dp"
                android:background="@color/colorNavy"
                android:textColor="@android:color/white"
                ></Button>
            <Button
                android:id="@+id/bu3"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="45pt"
                android:text="3"
                android:onClick="numberEvent"
                android:fontFamily="sans-serif"
                android:textSize="30dp"
                android:background="@color/colorNavy"
                android:textColor="@android:color/white"
                ></Button>
            <Button
                android:id="@+id/buPlus"
                android:layout_weight="0.5"
                android:layout_width="3pt"
                android:layout_height="40pt"
                android:text="+"
                android:onClick="operatorEvent"
                android:fontFamily="sans-serif"
                android:textSize="27dp"
                android:gravity="center"
                android:background="@drawable/round_button"
                android:textColor="@color/colorNavy"
                ></Button>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bu"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:text=""
                android:textSize="30dp"
                android:background="@color/colorNavy"
                android:textColor="@android:color/white"
                ></Button>
            <Button
                android:id="@+id/bu0"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:text="0"
                android:onClick="numberEvent"
                android:fontFamily="sans-serif"
                android:textSize="30dp"
                android:background="@color/colorNavy"
                android:textColor="@android:color/white"
                ></Button>
            <Button
                android:id="@+id/buDot"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:text="."
                android:onClick="numberEvent"
                android:fontFamily="sans-serif"
                android:textSize="30dp"
                android:background="@color/colorNavy"
                android:textColor="@android:color/white"
                ></Button>

            <Button
                android:id="@+id/buEqual"
                android:layout_weight="0.5"
                android:layout_width="3pt"
                android:layout_height="40pt"
                android:onClick="equalEvent"
                android:text="="
                android:fontFamily="sans-serif"
                android:textSize="50dp"
                android:gravity="center"
                android:background="@drawable/round_bo"
                android:textColor="@color/colorNavy"
                ></Button>

        </TableRow>

    </TableLayout>

</LinearLayout>